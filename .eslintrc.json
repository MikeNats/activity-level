{
  "extends": ["standard-jsx"],
  "env": {
	"es6": true
  },
  "parserOptions": {
	  "sourceType": "module"
  },
	"rules": {
		"object-curly-spacing": [2, "never"],
		"react/jsx-indent": ["error", "tab"],
		"react/jsx-indent-props": [0, "tag-name"],
		"react/jsx-curly-spacing": [2, "never"],
	   	"quotes": [2, "single", "avoid-escape"],
	  	"no-empty":  0,
		"indent": ["error", "tab"],
		"semi": [2, "always"],
		"no-extra-semi": 2,
		"no-nested-ternary": 2,
		"no-undef": 2,
		"no-cond-assign": [2, "always"],
		"no-dupe-args": 2,
		"no-dupe-keys": 2,
		"no-duplicate-case": 2,
		"no-inner-declarations": [2, "both"]
	}  
}